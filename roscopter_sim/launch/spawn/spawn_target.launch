<?xml version="1.0"?>

<launch>
  <arg name="target_name" default="platform"/>
  <arg name="model" default="$(find roscopter_sim)/xacro/target.xacro"/>
  <arg name="tf_prefix" default="$(optenv ROS_NAMESPACE)"/>
  <arg name="x" default="0.0"/>
  <arg name="y" default="0.0"/>
  <arg name="yaw" default="0.0"/>
  <arg name="z" default="1.0"/>
  <arg name="enable_logging" default="false"/>
  <arg name="enable_ground_truth" default="true"/>
  <arg name="log_file" default="$(arg target_name)"/>
  <arg name="enable_wind" default="true"/>
  <arg name="color" default="Black"/>
  <arg name="robot_namespace" default="/platform"/>
  <arg name="gazebo_namespace" default=""/>

  <!-- send the robot XML to param server -->
  <group ns="$(arg target_name)">
    <param name="robot_description" command="
      xacro --inorder '$(arg model)'
      target_name:=$(arg target_name)
      color:=$(arg color)
      gazebo_namespace:=$(arg gazebo_namespace)/gazebo
      robot_namespace:=$(arg robot_namespace)"
    />
    <param name="tf_prefix" type="string" value="$(arg tf_prefix)" />

    <!-- push robot_description to factory and spawn robot in gazebo -->
    <node name="spawn_$(arg target_name)" pkg="gazebo_ros" type="spawn_model"
      args="-param robot_description
            -urdf
            -x $(arg x)
            -y $(arg y)
            -z $(arg z)
            -Y $(arg yaw)
            -gazebo_namespace $(arg gazebo_namespace)/gazebo
            -robot_namespace $(arg robot_namespace)
            -model $(arg target_name)"
      respawn="false" output="screen">
    </node>
  </group>

</launch>
